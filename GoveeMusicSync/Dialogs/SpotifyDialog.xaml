<Window x:Class="GoveeMusicSync.Dialogs.SpotifyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoveeMusicSync.Dialogs"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="Enter Spotify Keys" Height="276" Width="460" ResizeMode="NoResize">
    <Grid Background="#FF0D1117" Margin="0,0,0,-6">
        <Label Content="Client ID" HorizontalAlignment="Left" Margin="7,10,0,0" VerticalAlignment="Top" Height="44" Width="138" Foreground="White" FontSize="22"/>
        <PasswordBox x:Name="Client_ID_Box" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Width="440" Height="29" FontSize="16"/>
        <Label Content="Client Secret" HorizontalAlignment="Left" Margin="7,102,0,0" VerticalAlignment="Top" Height="44" Width="263" Foreground="White" FontSize="22"/>
        <PasswordBox x:Name="Client_Secret_Box"  HorizontalAlignment="Center" VerticalAlignment="Top" Width="440" Height="29" Margin="0,139,0,0" FontSize="16"/>
        <Button x:Name="Connect_Button" Content="Save" HorizontalAlignment="Left" Height="29" Margin="318,189,0,0" VerticalAlignment="Top" Width="132" Background="White" FontSize="18" Click="Save_Button_Click"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Height="29" Margin="10,189,0,0" VerticalAlignment="Top" Width="132" Background="White" FontSize="18" Click="Cancel_Button_Click"/>

    </Grid>
</Window>
